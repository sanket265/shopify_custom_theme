{% schema %}
  {
    "name": "Furni Product Features",
    "settings": [
      {
        "id": "features_title",
        "type": "text",
        "label": "Furni Product Fetures",
        "default": "Product Features"
      },
      {
        "id": "features_description",
        "type": "richtext",
        "label": "Furni Fetures description",
      },
    ],
    "blocks": [
      {
        "type": "feature_button",
        "name": "Feature button",
        "settings": [
         {
           "type": "url",
           "id": "ft_link_url",
           "label": "Link URL"
         },
         {
           "type": "text",
           "id": "ft_link_text",
           "label": "Link Text"
         },
       ],
      },
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "id": "product_name",
            "type": "text",
            "label": "Product Name"
          },
          {
            "id": "product_price",
            "type": "number",
            "label": "Product Price"
          },
          {
            "id": "product_image",
            "type": "image_picker",
            "label": "Product Image"
          }
        ],
      }
    ],
    "presets": [
      {
        "name": "Furni Product Features Section",
        "category": "Product"
      }
    ]
  }
{% endschema %}

{% for block in section.blocks %}
  {% if block.type == "feature_button" %}
    <a href="{{ block.settings.ft_link_url }}">{{ block.settings.ft_link_text }}</a>
  {% endif %}
{% endfor %}

<!-- Start Product Section -->
  <div class="product-section">
    <div class="container">
      <div class="row">
        <!-- Start Column 1 -->
         <div class="col-md-12 col-lg-3 mb-5 mb-lg-0">
